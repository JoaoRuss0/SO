CFLAGS = -Wall -Wextra
PROGRAM = vowels_v2
OBJS = main.o string_utils.o

all: $(PROGRAM)

$(PROGRAM): $(OBJS)
	$(CC) -o $@ $^

# Can be generated by $gcc -MM *.c
main.o: main.c string_utils.h
string_utils.o: string_utils.c string_utils.h

.c.o:
	$(CC) -c $(CFLAGS) $<

depend:
	$(CC) -MM *.c